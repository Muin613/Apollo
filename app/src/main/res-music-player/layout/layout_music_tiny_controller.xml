<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/music_tiny_controller_height"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="@dimen/music_tiny_controller_margin">


    <com.munin.library.view.widget.NoHaloViewPager
        android:id="@+id/music_tiny_vp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/music_tiny_controller_margin"
        android:layout_weight="1" />

    <com.munin.music.ui.music.view.MusicTinyControlView
        android:id="@+id/music_tiny_control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.munin.library.view.widget.AspectImageView
        android:id="@+id/music_tiny_thumb_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/music_tiny_controller_margin" />
</LinearLayout>